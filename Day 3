    <script>
        let a = prompt("Hey whats you age?");
        a = Number.parseInt(a); // Converting the string to a number
        if (a < 0) {
            alert("This is an invalid age");
        }
        else if (a < 9) {
            alert("You are a kid and This is your time to enjoy school life.");
        }
        else if (a < 18 && a >= 9) {
            alert("You are a kid and now you have to start thinking about your carrer.");
        }
        else if (a == 18) {
            alert("Now as you are 18, You are going to take your first step into your carrer making");
        }
        else {
            alert("Now your are responsible for your ownself.")
        }
        console.log("Done")
        // HomeWork - Explore switch statement and write a basic program in the comments
        console.log("You can", (a < 18 ? "not drive" : "drive"))
    </script>
